@model BudgetPlannerStatsViewModel

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Closing Balance</th>
            <th>Total Expenses</th>
            <th>Total Income</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var statistic in Model.Statistics)
        {
            <tr>
                <td>@Html.FormatContent(FormatConstants.SetFormat(FormatConstants.ShortDateFormat), statistic.Date)</td>
                <td>@Html.FormatContent(FormatConstants.SetFormat(FormatConstants.CurrencyFormat), statistic.ClosingBalance)</td>
                <td>@Html.FormatContent(FormatConstants.SetFormat(FormatConstants.CurrencyFormat), statistic.TotalExpenses)</td>
                <td>@Html.FormatContent(FormatConstants.SetFormat(FormatConstants.CurrencyFormat), statistic.TotalIncome)</td>
            </tr>
        }
    </tbody>
</table>