@model BudgetPanelDashboardViewModel
<div class="card">
    @if (Model.BudgetPlanners.Any())
    {
        <div class="card-body">
            <div class="row">
                @foreach (var budgetPlanner in Model.BudgetPlanners)
                {
                    <div class="col">
                        @await Html.PartialAsync("Partials/BudgetPanelDashboardItem", budgetPlanner)
                    </div>
                }
            </div>
        </div>
        <div class="card-footer">
            @Html.ActionLink("Add", "Create", "Budget", null, DictionaryBuilder
                .Create<string, object>(dictionaryBuilder => dictionaryBuilder
                    .Add("class", "btn btn-primary")
                    .Add("popup", "modal")
                    .Add("data-args", "{ \"isModal\":\"true\" }")).ToDictionary())
    </div>
}
else
{
    <div class="card-body">
        @Html.Raw(Model.Content)
        @Html.ActionLink("Create one", "Create", "Budget", null, DictionaryBuilder
                .Create<string, object>(dictionaryBuilder => dictionaryBuilder
                    .Add("class", "btn btn-primary")
                    .Add("popup", "modal")
                    .Add("data-args", "{ \"isModal\":\"true\" }")).ToDictionary())
    </div>
}
</div>