@model AddBudgetTransactionViewModel

@{
    ViewBag.Title = "Create Budget";
    if (Model.IsModal)
        Layout = null;
}

@using (Html.BeginForm("SaveTransaction", "Budget", FormMethod.Post))
{
    @await Html.PartialAsync("Partials/Editors/_transactionEditor", Model)
    <button type="submit" class="btn btn-primary">Save Transaction</button>
    <button type="reset" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
}